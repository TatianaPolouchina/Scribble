<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/distortion_padding">

    <ImageView
        android:layout_width="@dimen/distortion_diameter"
        android:layout_height="@dimen/distortion_diameter"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/distortion_layout_margin"
        android:importantForAccessibility="no"
        android:src="@drawable/selector_cd_label" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/karla_bold"
            android:text="@string/Distortion10Name"
            android:textColor="@drawable/cd_colour_selector"
            android:textSize="@dimen/distortion_title_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distortion_subtitle_margin_top"
            android:text="@string/Distortion10Description"
            android:textColor="@drawable/cd_colour_selector"
            android:textSize="@dimen/distortion_subtitle_size" />
    </LinearLayout>
</LinearLayout>