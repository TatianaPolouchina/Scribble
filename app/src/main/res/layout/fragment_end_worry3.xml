<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.scribble.fragments.EndWorryFragment3">

    <TextView
        android:id="@+id/respondTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/karla_bold"
        android:text="@string/finish_worry_title"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_title"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/respondTitle">

        <RelativeLayout
            style="@style/scribbleImageSize">

            <VideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/animation"
                android:visibility="invisible"
                android:padding="0dp"
                android:foregroundTint="#F8F7F2"/>
        </RelativeLayout>


        <FrameLayout
            android:id="@+id/placeholder"
            style="@style/scribbleImageSize">

            <ImageView
                android:background="@color/white"
                style="@style/scribbleImageSize" />

            <ImageView
                android:id="@+id/scribble"
                style="@style/scribbleImage" />
        </FrameLayout>

        <ImageView
            android:id="@+id/finishedWorryCharacter"
            android:layout_width="@dimen/worry_size"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/worry_2"/>

        <ImageView
            android:id="@+id/worryCharacter"
            android:layout_width="@dimen/worry_size"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/worry_2"/>

    </FrameLayout>


    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/karla_bold"
        android:text="@string/worry_ended_message"
        android:textColor="@color/lightOrangeMain"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/closeButton"
        style="@style/OutlineButton"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/close_button_text"
        android:textAppearance="@style/OutlineButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/karla_bold"
        android:text="@string/worry_ended_subtitle"
        android:textColor="#9A9A9A"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question" />

</androidx.constraintlayout.widget.ConstraintLayout>