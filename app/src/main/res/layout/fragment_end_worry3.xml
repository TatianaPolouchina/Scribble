<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.scribble.fragments.EndWorryFragment3">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newWorryTitle">

            <TextView
                android:id="@+id/respondTitle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/karla_bold"
                android:text="@string/finish_worry_title"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <FrameLayout
                android:id="@+id/worryImageLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_title"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/respondTitle">

                <RelativeLayout style="@style/scribbleImageSize">

                    <VideoView
                        android:id="@+id/animation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:foregroundTint="#F8F7F2"
                        android:padding="0dp"
                        android:visibility="invisible" />
                </RelativeLayout>


                <FrameLayout
                    android:id="@+id/placeholder"
                    style="@style/scribbleImageSize">

                    <ImageView
                        style="@style/scribbleImageSize"
                        android:background="@android:color/white"
                        android:importantForAccessibility="no" />

                    <ImageView
                        android:id="@+id/scribble"
                        style="@style/scribbleImage"
                        android:importantForAccessibility="no" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/finishedWorryCharacter"
                    android:layout_width="@dimen/worry_size"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"
                    android:src="@drawable/worry_1_blu" />

                <ImageView
                    android:id="@+id/worryCharacter"
                    android:layout_width="@dimen/worry_size"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"
                    android:src="@drawable/worry_1_blu" />

            </FrameLayout>


            <TextView
                android:id="@+id/worryFinishedMessage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/karla_bold"
                android:text="@string/worry_ended_message_1"
                android:textColor="@color/lightOrangeMain"
                android:textSize="48sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/worryImageLayout" />

            <TextView
                android:id="@+id/worryFinishedMessage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/karla_bold"
                android:gravity="center_horizontal"
                android:text="@string/worry_ended_subtitle_1"
                android:textColor="#9A9A9A"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/worryFinishedMessage1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/closeButton"
        style="@style/OutlineButton"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/close_button_text"
        android:textAppearance="@style/OutlineButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>