<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:importantForAccessibility="no"
        android:src="@drawable/rectangle_rounded_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/lightBlue" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/left_scribble_content_description"
        android:src="@drawable/vector_scribble_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/lightBlue2" />


    <ImageView
        android:layout_width="70dp"
        android:layout_height="85dp"
        android:layout_marginTop="5dp"
        android:importantForAccessibility="no"
        android:src="@drawable/vector_scribble_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/lightBlue2" />


    <TextView
        android:id="@+id/tvFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/karla_extra_bold"
        android:padding="8dp"
        android:text="@string/ongoing_page_title"
        android:textColor="@color/darkBlueMain"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="-3dp"
        android:importantForAccessibility="no"
        android:src="@drawable/rectangle_rounded_15dp"
        app:layout_constraintBottom_toBottomOf="@id/tvSecond"
        app:layout_constraintEnd_toEndOf="@id/tvSecond"
        app:layout_constraintStart_toStartOf="@id/tvSecond"
        app:layout_constraintTop_toTopOf="@id/tvSecond"
        app:tint="@color/lightBlue2" />

    <TextView
        android:id="@+id/tvSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_rounded_15dp"
        android:fontFamily="@font/karla_bold"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:paddingEnd="15dp"
        android:paddingBottom="8dp"
        android:text="@string/ongoing_page_subtitle"
        android:textColor="@color/darkBlueMain"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFirst" />

</androidx.constraintlayout.widget.ConstraintLayout>