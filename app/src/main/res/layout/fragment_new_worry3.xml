<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.scribble.fragments.NewWorryFragment3">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newWorryTitle">

            <TextView
                android:id="@+id/newWorryTitle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/karla_bold"
                android:text="@string/new_worry_page_title"
                android:textAlignment="center"
                android:textColor="@color/darkBlueMain"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/worryImageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newWorryTitle">

                <ImageView
                    android:id="@+id/scribble"
                    style="@style/scribbleImage"
                    android:layout_gravity="center"
                    app:tint="@color/lightBlue2" />

                <ImageView
                    android:id="@+id/worryCharacter"
                    android:layout_width="@dimen/worry_size"
                    android:layout_height="@dimen/worry_size"
                    android:layout_gravity="center"
                    android:src="@drawable/worry_2" />
            </FrameLayout>

            <TextView
                android:id="@+id/instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_margin"
                android:fontFamily="@font/karla_bold"
                android:text="@string/new_worry_distortions_prompt"
                android:textColor="@color/darkBlueMain"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/worryImageLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/addDistortionLayout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="-35dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/instruction"
                app:layout_constraintTop_toBottomOf="@+id/instruction">

                <ImageView
                    android:id="@+id/add_distortion_Button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:src="@drawable/vector_plus_sign"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/addDistortionLayout"
                    app:tint="@color/lightGrey" />

                <GridLayout
                    android:id="@+id/distortionsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:animateLayoutChanges="true"
                    android:columnCount="4"
                    android:gravity="start"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@id/add_distortion_Button"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/add_distortion_button_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="@string/add_distortion_button_label"
                    android:textAppearance="@style/Subtext"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/add_distortion_Button"
                    app:layout_constraintStart_toEndOf="@id/add_distortion_Button"
                    app:layout_constraintTop_toTopOf="@+id/add_distortion_Button" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_button"
        style="@style/BlueButton"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/new_worry_button_text"
        android:textAppearance="@style/BlueButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>