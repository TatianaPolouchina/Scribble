<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ongoingWorriesFragment">

    <fragment
        android:id="@+id/newWorryFragment3"
        android:name="com.example.scribble.fragments.NewWorryFragment3"
        tools:layout="@layout/fragment_new_worry3">

        <action
            android:id="@+id/action_newWorryFragment3_to_distortionsFragment"
            app:destination="@id/distortionsFragment" />
        <action
            android:id="@+id/action_newWorryFragment3_to_newWorryFinishedFragment"
            app:destination="@id/newWorryFinishedFragment" />
    </fragment>

    <fragment
        android:id="@+id/distortionsFragment"
        android:name="com.example.scribble.fragments.DistortionsFragment"
        tools:layout="@layout/fragment_distortions_page">
        <action
            android:id="@+id/action_distortionsFragment_to_newWorryFragment2"
            app:destination="@id/newWorryFragment3" />
        <action
            android:id="@+id/action_distortionsFragment_to_distortionsInfoFragment"
            app:destination="@id/distortionsInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/ongoingWorriesFragment"
        android:name="com.example.scribble.fragments.OngoingWorriesFragment"
        android:label="OngoingWorriesFragment"
        tools:layout="@layout/fragment_ongoing_worries">
        <action
            android:id="@+id/action_ongoingWorriesFragment_to_worryFragment"
            app:destination="@id/worryFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/empty_transition"
            app:popEnterAnim="@anim/empty_transition"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/finishedWorriesFragment"
        android:name="com.example.scribble.fragments.FinishedWorriesFragment"
        android:label="FinishedWorriesFragment"
        tools:layout="@layout/fragment_finished_worries">
        <action
            android:id="@+id/action_finishedWorriesFragment_to_worryFragment"
            app:destination="@id/worryFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/empty_transition"
            app:popEnterAnim="@anim/empty_transition"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/newWorryFragment1"
        android:name="com.example.scribble.fragments.NewWorryFragment1"
        android:label="fragment_new_worry"
        tools:layout="@layout/fragment_new_worry">
        <action
            android:id="@+id/action_newWorryFragment1_to_newWorryFragment2"
            app:destination="@id/newWorryFragment2" />
    </fragment>

    <fragment
        android:id="@+id/newWorryFragment2"
        android:name="com.example.scribble.fragments.NewWorryFragment2"
        android:label="NewWorryFragment2"
        tools:layout="@layout/fragment_new_worry2">
        <action
            android:id="@+id/action_newWorryFragment2_to_newWorryFragment3"
            app:destination="@id/newWorryFragment3" />
    </fragment>

    <fragment
        android:id="@+id/newWorryFinishedFragment"
        android:name="com.example.scribble.fragments.NewWorryFinishedFragment"
        android:label="NewWorryFinishedFragment"
        tools:layout="@layout/fragment_new_worry_finished">
        <action
            android:id="@+id/action_newWorryFinishedFragment_to_ongoingWorriesFragment"
            app:destination="@id/ongoingWorriesFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/empty_transition"
            app:popEnterAnim="@anim/empty_transition"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/worryFragment"
        android:name="com.example.scribble.fragments.WorryFragment"
        android:label="fragment_ongoing_worry"
        tools:layout="@layout/fragment_worry">
        <argument
            android:name="selectedWorry"
            app:argType="com.example.scribble.Worry" />
        <action
            android:id="@+id/action_ongoingWorryFragment_to_endWorryFragment1"
            app:destination="@id/endWorryFragment1"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/empty_transition"
            app:popEnterAnim="@anim/empty_transition"
            app:popExitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_worryFragment_to_respondFragment"
            app:destination="@id/respondFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/empty_transition"
            app:popEnterAnim="@anim/empty_transition"
            app:popExitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_worryFragment_to_ongoingWorriesFragment"
            app:destination="@id/ongoingWorriesFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/empty_transition"
            app:popEnterAnim="@anim/empty_transition"
            app:popExitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_worryFragment_to_finishedWorriesFragment"
            app:destination="@id/finishedWorriesFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/empty_transition"
            app:popEnterAnim="@anim/empty_transition"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/endWorryFragment1"
        android:name="com.example.scribble.fragments.EndWorryFragment1"
        android:label="fragment_end_worry1"
        tools:layout="@layout/fragment_end_worry1">
        <argument
            android:name="selectedWorry"
            app:argType="com.example.scribble.Worry" />
        <action
            android:id="@+id/action_endWorryFragment1_to_endWorryFragment2"
            app:destination="@id/endWorryFragment2" />
    </fragment>

    <fragment
        android:id="@+id/endWorryFragment2"
        android:name="com.example.scribble.fragments.EndWorryFragment2"
        android:label="fragment_end_worry2"
        tools:layout="@layout/fragment_end_worry2">
        <argument
            android:name="selectedWorry"
            app:argType="com.example.scribble.Worry" />
        <action
            android:id="@+id/action_endWorryFragment2_to_endWorryFragment3"
            app:destination="@id/endWorryFragment3" />
    </fragment>

    <fragment
        android:id="@+id/endWorryFragment3"
        android:name="com.example.scribble.fragments.EndWorryFragment3"
        android:label="fragment_end_worry3"
        tools:layout="@layout/fragment_end_worry3">
        <action
            android:id="@+id/action_endWorryFragment3_to_finishedWorriesFragment"
            app:destination="@id/finishedWorriesFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/empty_transition"
            app:popEnterAnim="@anim/empty_transition"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <dialog
        android:id="@+id/distortionsInfoFragment"
        android:name="com.example.scribble.fragments.DistortionsInfoFragment"
        android:label="fragment_distortion_info"
        tools:layout="@layout/fragment_distortions_info" />
    <fragment
        android:id="@+id/respondFragment"
        android:name="com.example.scribble.fragments.RespondFragment"
        android:label="fragment_respond"
        tools:layout="@layout/fragment_respond">
        <argument
            android:name="selectedWorry"
            app:argType="com.example.scribble.Worry" />
        <action
            android:id="@+id/action_respondFragment_to_worryFragment"
            app:destination="@id/worryFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/empty_transition"
            app:popEnterAnim="@anim/empty_transition"
            app:popExitAnim="@anim/fade_out" />
    </fragment>


</navigation>