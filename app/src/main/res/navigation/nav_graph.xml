<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ongoingWorriesFragment">

    <fragment
        android:id="@+id/newWorryFragment3"
        android:name="com.example.worryapp.NewWorryFragment3"
        tools:layout="@layout/fragment_new_worry3">

        <action
            android:id="@+id/action_newWorryFragment3_to_distortionsFragment"
            app:destination="@id/distortionsFragment" />
        <action
            android:id="@+id/action_newWorryFragment3_to_newWorryFinishedFragment"
            app:destination="@id/newWorryFinishedFragment" />
    </fragment>

    <fragment
        android:id="@+id/distortionsFragment"
        android:name="com.example.worryapp.DistortionsFragment"
        tools:layout="@layout/fragment_distortions_page">
        <action
            android:id="@+id/action_distortionsFragment_to_newWorryFragment2"
            app:destination="@id/newWorryFragment3" />
    </fragment>

    <fragment
        android:id="@+id/ongoingWorriesFragment"
        android:name="com.example.worryapp.OngoingWorriesFragment"
        android:label="OngoingWorriesFragment"
        tools:layout="@layout/fragment_ongoing_worries">
        <action
            android:id="@+id/action_ongoingWorriesFragment_to_ongoingWorryFragment"
            app:destination="@id/ongoingWorryFragment" />
    </fragment>

    <fragment
        android:id="@+id/finishedWorriesFragment"
        android:name="com.example.worryapp.FinishedWorriesFragment"
        android:label="FinishedWorriesFragment"
        tools:layout="@layout/fragment_finished_worries" />

    <fragment
        android:id="@+id/newWorryFragment1"
        android:name="com.example.worryapp.NewWorryFragment1"
        android:label="fragment_new_worry"
        tools:layout="@layout/fragment_new_worry">
        <action
            android:id="@+id/action_newWorryFragment1_to_newWorryFragment2"
            app:destination="@id/newWorryFragment2" />
    </fragment>

    <fragment
        android:id="@+id/newWorryFragment2"
        android:name="com.example.worryapp.NewWorryFragment2"
        android:label="NewWorryFragment2"
        tools:layout="@layout/fragment_new_worry2">
        <action
            android:id="@+id/action_newWorryFragment2_to_newWorryFragment3"
            app:destination="@id/newWorryFragment3" />
    </fragment>

    <fragment
        android:id="@+id/newWorryFinishedFragment"
        android:name="com.example.worryapp.NewWorryFinishedFragment"
        android:label="NewWorryFinishedFragment"
        tools:layout="@layout/fragment_new_worry_finished">
        <action
            android:id="@+id/action_newWorryFinishedFragment_to_ongoingWorriesFragment"
            app:destination="@id/ongoingWorriesFragment"
            app:enterAnim="@android:animator/fade_in"
            app:exitAnim="@android:animator/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/ongoingWorryFragment"
        android:name="com.example.worryapp.OngoingWorryFragment"
        android:label="fragment_ongoing_worry"
        tools:layout="@layout/fragment_ongoing_worry">
        <argument
            android:name="selectedWorry"
            app:argType="com.example.worryapp.Worry" />
    </fragment>


</navigation>