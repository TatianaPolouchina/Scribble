<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OutlineButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rectangle_rounded_outline</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/karla_bold</item>
    </style>
    <style name="BlueButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rectangle_rounded_10dp</item>
        <item name="android:backgroundTint">@color/darkBlueMain</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/karla_bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="FinishButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rectangle_rounded_outline</item>
        <item name="android:backgroundTint">@color/darkBlueMain</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/karla_bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="subtext" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="fontFamily">@font/karla_bold</item>
    </style>
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_menu_item</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="itemBackground">@drawable/temp_background</item>
    </style>
    <style name="AppTheme.BottomNavigationView" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>


</resources>