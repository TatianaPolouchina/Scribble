<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OutlineButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rectangle_rounded_outline_white</item>
        <item name="height">10dp</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/karla_bold</item>
    </style>

    <style name="BlueButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rectangle_rounded_10dp_blue</item>
        <item name="height">10dp</item>
        <item name="android:backgroundTint">@color/darkBlueMain</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/karla_bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Subtext">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="fontFamily">@font/karla_bold</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="itemBackground">@drawable/selector_menu_item_background</item>
    </style>


    <style name="TextInputLayout">
        <item name="android:layout_width">@dimen/textbox_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="maxWidth">400dp</item>
        <item name="boxStrokeColor">@color/grey</item>
        <item name="cursorColor">@color/darkBlueMain</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">@color/darkBlueMain</item>
        <item name="android:textColorHint">@color/lightGrey</item>
    </style>

    <style name="LargeTextInputEditText" parent="TextInputEditText">
        <item name="android:layout_height">85dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SmallTextInputEditText" parent="TextInputEditText">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="scribbleImageSize">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">220dp</item>
    </style>

    <style name="scribbleImage" parent="scribbleImageSize">
        <item name="android:tint">#F8F7F2</item>
        <item name="android:src">@drawable/scribble</item>
    </style>

</resources>